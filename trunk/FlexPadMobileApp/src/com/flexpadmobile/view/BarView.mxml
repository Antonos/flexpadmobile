<?xml version="1.0" encoding="utf-8"?>
<view:FlexPadMobileView xmlns:fx="http://ns.adobe.com/mxml/2009"
						xmlns:s="library://ns.adobe.com/flex/spark"
						xmlns:flexpadmobile="http://code.google.com/p/flexpadmobile/"
						xmlns:view="com.flexpadmobile.view.*"
						title="Bar">
	
	<flexpadmobile:BarGrey width="100%" height="45">
		<flexpadmobile:layout>
			<s:HorizontalLayout paddingLeft="10" paddingRight="10" verticalAlign="middle"/>
		</flexpadmobile:layout>
		<flexpadmobile:ButtonBarGrey requireSelection="true">
			<flexpadmobile:dataProvider>
				<s:ArrayCollection>
					<fx:String>Search</fx:String>
					<fx:String>Directions</fx:String>
				</s:ArrayCollection>
			</flexpadmobile:dataProvider>
		</flexpadmobile:ButtonBarGrey>
	</flexpadmobile:BarGrey>
	
	<flexpadmobile:BarBlack width="100%" height="45">
		<flexpadmobile:layout>
			<s:HorizontalLayout horizontalAlign="center" verticalAlign="middle"/>
		</flexpadmobile:layout>
		
		<flexpadmobile:BarBlackLabel text="Label"/>
		
	</flexpadmobile:BarBlack>
	
	<flexpadmobile:BarBlackSemiTrans width="100%" height="45">
		<flexpadmobile:BackButtonBlack left="5" label="Back" verticalCenter="0"/>
		<flexpadmobile:BarBlackLabel horizontalCenter="0" text="Label" verticalCenter="0"/>
	</flexpadmobile:BarBlackSemiTrans>
	
	<flexpadmobile:TabBarBlack width="100%" height="50" iconField="icon"
							   iconSelectedField="iconSelected">
		<s:ArrayCollection>
			<fx:Object label="Label One" icon="@Embed(source='/asset/icon/tabBarBlackicon1.png')"
					   iconSelected="@Embed(source='/asset/icon/tabBarBlackicon1Selected.png')"/>
			<fx:Object label="Label Two" icon="@Embed(source='/asset/icon/tabBarBlackIcon2.png')"
					   iconSelected="@Embed(source='/asset/icon/tabBarBlackIcon2Selected.png')"/>
			<fx:Object label="Label Three" icon="@Embed(source='/asset/icon/tabBarBlackIcon3.png')"
					   iconSelected="@Embed(source='/asset/icon/tabBarBlackIcon3Selected.png')"/>
		</s:ArrayCollection>
	</flexpadmobile:TabBarBlack>
	
	<flexpadmobile:ButtonBarBlack requireSelection="true">
		<flexpadmobile:dataProvider>
			<s:ArrayCollection>
				<fx:String>Label 1</fx:String>
				<fx:String>Label 2</fx:String>
				<fx:String>Label 3</fx:String>
			</s:ArrayCollection>
		</flexpadmobile:dataProvider>
	</flexpadmobile:ButtonBarBlack>
	
	<flexpadmobile:LargeButtonBarGrey requireSelection="true">
		<flexpadmobile:dataProvider>
			<s:ArrayCollection>
				<fx:String>Label One</fx:String>
				<fx:String>Label Two</fx:String>
				<fx:String>Label Three</fx:String>
			</s:ArrayCollection>
		</flexpadmobile:dataProvider>
	</flexpadmobile:LargeButtonBarGrey>
</view:FlexPadMobileView>
